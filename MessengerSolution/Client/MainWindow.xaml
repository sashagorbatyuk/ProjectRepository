<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чат-клієнт" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Рядок для ніка -->
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Введення ніка -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="10">
            <TextBlock Text="Нік:" VerticalAlignment="Center" />
            <TextBox x:Name="NicknameBox" Width="150" Margin="5,0" />
            <Button Content="Підключитися" Click="ConnectButton_Click" Width="100" />
        </StackPanel>

        <!-- Вікно чату -->
        <TextBox x:Name="ChatBox" Grid.Row="1" Grid.Column="0" Margin="10" IsReadOnly="True"
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

        <!-- Ввід повідомлення -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="MessageBox" Width="350" />
            <Button Content="Надіслати" Width="100" Margin="10,0,0,0" Click="SendMessage_Click" />
        </StackPanel>

        <!-- Список онлайн користувачів -->
        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Margin="10">
            <TextBlock Text="Онлайн:" FontWeight="Bold" Margin="0,0,0,5" />
            <ListBox x:Name="UserListBox" />
        </StackPanel>
    </Grid>
</Window>
